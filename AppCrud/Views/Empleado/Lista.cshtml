@section Styles {
    <style>
        .hero {
            margin-top: 60px; 
        }
    </style>
}
@model List<AppCrud.Models.Empleado>
<div class="row hero">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="card-title text-primary mb-0">
                        <i class="fas fa-list me-2"></i>Lista de Empleados
                    </h3>
                    <a asp-controller="Empleado" asp-action="Nuevo" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Nuevo Empleado
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Nombre Completo</th>
                                <th>Correo</th>
                                <th>Fecha de Contrato</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.IdEmpleado</td>
                                    <td>@item.NombreCompleto</td>
                                    <td>@item.Correo</td>
                                    <td>@item.FechaContrato.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (item.Activo)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactivo</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Empleado" asp-action="Editar" asp-route-id="@item.IdEmpleado"
                                               class="btn btn-sm btn-primary me-2">
                                                <i class="fas fa-edit me-1"></i>Editar
                                            </a>
                                            <button onclick="mostrarConfirmacion(@item.IdEmpleado, '@item.NombreCompleto')"
                                                    class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash me-1"></i>Eliminar
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.all.min.js"></script>

    <script>
        function mostrarConfirmacion(id, nombre) {
            Swal.fire({
                title: '¿Está seguro?',
                html: `¿Desea eliminar al empleado <strong>${nombre}</strong>?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/Empleado/Eliminar/${id}`;
                }
            });
        }

        @if (TempData["Mensaje"] != null)
        {
            <text>
                Swal.fire({
                    title: '@(TempData["Tipo"]?.ToString() == "success" ? "Éxito" : "Error")',
                    text: '@TempData["Mensaje"]',
                    icon: '@TempData["Tipo"]',
                    confirmButtonColor: '@(TempData["Tipo"]?.ToString() == "success" ? "#3085d6" : "#d33")'
                });
            </text>
        }
    </script>
}