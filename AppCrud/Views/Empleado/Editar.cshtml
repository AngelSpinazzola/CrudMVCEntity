@section Styles {
    <style>
        .hero {
            margin-top: 60px;
        }
    </style>
}
@model AppCrud.Models.Empleado
<div class="row hero">
    <div class="col-lg-8 offset-lg-2">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-primary mb-4">
                    <i class="fas fa-user-edit me-2"></i>Editar Empleado
                </h3>

                <form asp-controller="Empleado" asp-action="Editar" method="post">
                    <input asp-for="IdEmpleado" type="hidden" />

                    <div class="mb-4">
                        <label class="form-label">Nombre Completo</label>
                        <input class="form-control" asp-for="NombreCompleto" type="text" required />
                        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Correo Electrónico</label>
                        <input class="form-control" asp-for="Correo" type="email" required />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Fecha de Contrato</label>
                        <input class="form-control" asp-for="FechaContrato" type="date" required />
                        <span asp-validation-for="FechaContrato" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Activo" type="checkbox" id="chkActivo" />
                            <label class="form-check-label" for="chkActivo">Empleado Activo</label>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-save me-2"></i>Actualizar
                        </button>
                        <a asp-controller="Empleado" asp-action="Lista" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Volver
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>